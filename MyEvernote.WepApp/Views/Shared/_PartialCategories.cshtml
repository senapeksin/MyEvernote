@using MyEvernote.BusinessLayer
@using MyEvernote.Entities


@{
    CategoryManager cm = new CategoryManager();  //categori manager olusturuyourm
    List<Category> list = cm.List();    //ve categori manager içerisindeki kategorileri listeliyorum.
}

<p class="lead">Kategoriler</p>
<div class="list-group">
    <a href="/Home/Index" class="list-group-item"> <span class="glyphicon glyphicon-arrow-right"></span> Tümü</a>

    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item"><span class="glyphicon glyphicon-arrow-right">@cat.Title</span></a>
    }

</div>
